<% include partials/header %>
<script>
	function funToggle(val)
	{
		if(val == "BTech")
		{
			$('#MTech').addClass('d-none');
			$('#MBA').addClass('d-none')
			$('#BTech').removeClass('d-none');
		}
		else if(val == "MTech")
		{
			$('#BTech').addClass('d-none');
			$('#MBA').addClass('d-none')
			$('#MTech').removeClass('d-none');
		}
		else if(val == "MBA")
		{
			$('#MTech').addClass('d-none');
			$('#BTech').addClass('d-none')
			$('#MBA').removeClass('d-none');
		}
	}
			
